<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="2dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/recImage"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recName"
            android:text="Product Name"
            android:textColor="@color/lavender"
            android:textSize="22sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recPrice"
            android:text="Rs- 8888"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recName"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recCode"
            android:text="# 8888"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recPrice"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recPerc"
            android:text="% 88"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:layout_toEndOf="@id/recCode"
            android:layout_below="@id/recPrice"
            android:textAlignment="textEnd"
            android:paddingRight="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recCateg"
            android:text="Cat: ABCD"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recCode"
            android:layout_marginStart="20dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>